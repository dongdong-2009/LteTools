
@{
    ViewBag.Title = "指标统计数据导入";
    ViewBag.Message = "——读取Excel表信息，然后导入数据库";
}

@section featured {
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
}
<article>
    @using (Html.BeginForm("KpiImport", "Kpi",
        FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <fieldset>
        <legend>指标文件选择</legend>
        <ol>
            <li>
                每日KPI Excel文件选择：
                <input type="file" name="dailyKpi" accept=".xls, .xlsx" />
            </li>
        </ol>
    </fieldset>

    <p>
        <button type="submit" class="btn btn-primary btn-lg">
            <span class="glyphicon glyphicon-save"></span>导入文件
        </button>
    </p>
    }
</article>

@{ Html.RenderPartial("_KpiMenu");}

